{
  "name": "excel-file-merger",
  "version": "2.0.1",
  "description": "Excel File Merger - A desktop app for merging Excel files with source tracking and date column detection",
  "main": "./main.js",
  "author": "Excel File Merger Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/excel-file-merger.git"
  },
  "keywords": [
    "excel",
    "merge",
    "electron",
    "desktop",
    "data-processing"
  ],
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--no-deprecation electron .",
    "dev": "concurrently --kill-others \"cross-env PORT=3000 NODE_OPTIONS='--no-deprecation' npx react-scripts start\" \"npx wait-on http://localhost:3000 && cross-env NODE_OPTIONS='--no-deprecation' npx electron . --dev\"",
    "react-dev": "cross-env NODE_OPTIONS=--no-deprecation react-scripts start",
    "electron-dev": "wait-on http://localhost:8080 && cross-env NODE_OPTIONS=--no-deprecation electron . --dev",
    "dev-manual": "echo Start React server first with: npm run react-dev && echo Then in another terminal run: npm run electron-start",
    "electron-start": "cross-env NODE_OPTIONS=--no-deprecation electron . --dev",
    "build": "npm run build-react && electron-builder",
    "build-react": "react-scripts build",
    "dist": "npm run build-react && electron-builder --publish=never",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "commit-version": "git add . && git commit -m \"Version bump to $(node -p \"require('./package.json').version\")\""
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "react-scripts": "5.1.0-next.26",
    "wait-on": "^7.2.0"
  },
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.excelmerger.app",
    "productName": "Excel File Merger",
    "directories": {
      "output": "dist"
    },
    "extends": null,
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable",
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
